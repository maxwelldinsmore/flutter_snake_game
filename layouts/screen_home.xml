<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/center_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snake Game"
            android:textColor="#FFFFFF"
            android:fontFamily="ArcadeClassic"
            android:textSize="64sp"
            android:textStyle="normal"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textColor="#E4FF19"
            android:fontFamily="ArcadeClassic"
            android:textSize="36sp"
            android:textStyle="normal"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#4E7EE5"
            android:fontFamily="ArcadeClassic"
            android:textSize="36sp"
            android:textStyle="normal"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tv_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:textColor="#ED1212"
            android:fontFamily="ArcadeClassic"
            android:textSize="36sp"
            android:textStyle="normal"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="made by alyssa - maxwell - bilgan - shanice"
        android:textColor="#FFFFFF"
        android:fontFamily="ArcadeClassic"
        android:textSize="15sp"
        android:textStyle="normal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
