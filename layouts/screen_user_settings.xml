<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_user_settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Settings"
        android:textColor="#E4FF19"
        android:fontFamily="ArcadeClassic"
        android:textSize="48sp"
        android:gravity="center"
        android:textStyle="normal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/ll_user_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_user_settings_title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_label_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#E4FF19"
            android:fontFamily="ArcadeClassic"
            android:textSize="36sp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4FAC5"
            android:padding="10dp"
            android:hint="Enter username"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#E4FF19"
            android:fontFamily="ArcadeClassic"
            android:textSize="36sp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4FAC5"
            android:padding="10dp"
            android:hint="Enter email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_change_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Avatar"
            android:fontFamily="ArcadeClassic"
            android:textSize="36sp"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_save_user_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:fontFamily="ArcadeClassic"
            android:textSize="36sp"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>