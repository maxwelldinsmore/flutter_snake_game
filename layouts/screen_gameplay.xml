<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gameplay"
    android:padding="24dp">

    <!-- Game screen placeholder (where game view will be inserted) -->
    <FrameLayout
        android:id="@+id/game_screen_frame"
        android:layout_width="333dp"
        android:layout_height="402dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:background="#7E8D5C"
        android:padding="8dp" />

    <!-- D-pad controls arranged like a retro handheld -->
    <!-- Up button -->
    <ImageButton
        android:id="@+id/btn_up"
        android:layout_width="89dp"
        android:layout_height="94dp"
        android:layout_below="@id/game_screen_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/btn_dpad"
        android:background="@null"
        android:contentDescription="Up" />

    <!-- Left button -->
    <ImageButton
        android:id="@+id/btn_left"
        android:layout_width="89dp"
        android:layout_height="94dp"
        android:layout_toLeftOf="@id/btn_up"
        android:layout_alignTop="@id/btn_up"
        android:layout_marginEnd="12dp"
        android:src="@drawable/btn_dpad"
        android:rotation="270"
        android:background="@null"
        android:contentDescription="Left" />

    <!-- Right button -->
    <ImageButton
        android:id="@+id/btn_right"
        android:layout_width="89dp"
        android:layout_height="94dp"
        android:layout_toRightOf="@id/btn_up"
        android:layout_alignTop="@id/btn_up"
        android:layout_marginStart="12dp"
        android:src="@drawable/btn_dpad"
        android:rotation="90"
        android:background="@null"
        android:contentDescription="Right" />

    <!-- Down button -->
    <ImageButton
        android:id="@+id/btn_down"
        android:layout_width="89dp"
        android:layout_height="94dp"
        android:layout_below="@id/btn_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/btn_dpad"
        android:rotation="180"
        android:background="@null"
        android:contentDescription="Down" />

</RelativeLayout>
